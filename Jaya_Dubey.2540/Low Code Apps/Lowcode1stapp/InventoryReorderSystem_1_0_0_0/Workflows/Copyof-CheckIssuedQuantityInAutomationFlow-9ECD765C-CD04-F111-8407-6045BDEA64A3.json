                  "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                },
                "parameters": {
                  "entityName": "std_partsissueds",
                  "recordId": "@triggerOutputs()?['body/std_partsissuedid']",
                  "item/std_statusofissues": 924350002
                },
                "authentication": "@parameters('$authentication')"
              }
            }
          },
          "runAfter": {
