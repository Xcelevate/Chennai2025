            ]
          },
          "else": {
            "actions": {
              "Update_a_row": {
                "runAfter": {},
                "metadata": {
                  "operationMetadataId": "d370c652-a024-437b-8f37-6437caaeff3a"
                },
                "type": "OpenApiConnection",
                "inputs": {
                  "host": {
                    "connectionName": "shared_commondataserviceforapps",
                    "operationId": "UpdateOnlyRecord",
                    "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                  },
                  "parameters": {
                    "entityName": "std_partses",
                    "recordId": "@triggerOutputs()?['body/_std_parts_value']",
                    "item/std_stockquantity": "@sub(int(outputs('Get_a_row_by_ID')?['body/std_stockquantity']),int(triggerOutputs()?['body/std_issuedquantity']))"
                  },
                  "authentication": "@parameters('$authentication')"
                }
              }
            }
          },
          "expression": {
            "greater": [
              "@int(triggerOutputs()?['body/std_issuedquantity'])",
              "@int(outputs('Get_a_row_by_ID')?['body/std_stockquantity'])"
